@model List<Data.Entities.ApplicationUser>;

<h1 class="mb-4">User List</h1>

<a asp-controller="User" asp-action="Create" class="mb-3 btn btn-primary text-white">Create New User</a>

@*<ul class="list-group">
        @foreach (var user in @Model)
        {
            <li class="list-group-item">@user.Name @user.Surname</li>
        }
    </ul>*@

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Surname</th>
            <th scope="col">Email</th>
            <th scope="col">Birthdate</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in @Model)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Surname</td>
                <td>@user.Email</td>
                <td>@user.BirthDate.ToShortDateString()</td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic example">
                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-outline-info p-1 px-3">Edit</a>
                        <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-outline-danger p-1 px-3">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<p class="my-2 text-center">Count: @Model.Count</p>

<partial name="_ToastrPartial" />